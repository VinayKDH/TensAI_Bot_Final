{
  "env": { "browser": true, "es2021": true, "webextensions": true },
  "extends": ["eslint:recommended"],
  "parserOptions": { "ecmaVersion": 12, "sourceType": "module" },
  "rules": {
    "no-unused-vars": ["warn", { "args": "none" }],
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["error", "single"]
  }
}


