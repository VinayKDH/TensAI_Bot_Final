{
  "manifest_version": 3,
  "name": "TensAI Browser Extension",
  "version": "1.0.0",
  "description": "AI-powered productivity tools for web browsing - Text generation, translation, summarization, and more",
  "author": "TensAI Team",
  "default_locale": "en",
  
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "tabs",
    "scripting",
    "notifications"
  ],
  
  "host_permissions": [
    "https://dev2.tens-ai.com/*",
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "service_worker": "src/background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "css": ["src/content/content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "TensAI",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  
  "options_page": "src/options/options.html",
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/images/*",
        "src/popup/*",
        "src/content/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Open TensAI popup"
    },
    "quick-translate": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Quick translate selected text"
    },
    "quick-summarize": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Quick summarize selected text"
    }
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
